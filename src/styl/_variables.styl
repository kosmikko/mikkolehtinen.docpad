@import 'nib'

// Fonts
$font-main = "PT Serif", Georgia, Times, "Times New Roman", serif
$font-sans = "PT Sans", "Helvetica Neue", Arial, sans-serif
$font-monospace = Menlo, Monaco, 'Andale Mono', 'lucida console', 'Courier New', monospace

// Colors
$text-color = #222
$sidebar-border = #e0e0e0

// Main Link Colors
$link-color = lighten(#165b94, 3)
$link-color-hover = adjust($link-color, 'lightness', 10)
$link-color-visited = adjust($link-color, 'hue' , 80)
$link-color-active = adjust($link-color-hover, 'lightness',  -15)